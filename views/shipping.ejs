    <style>
      .shipping-box {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
        margin-top: 40px;
      }
      .shipping-box h2 {
        margin-bottom: 20px;
        text-align: center;
      }
      .shipping-box table td {
        padding: 10px;
      }
      .shipping-box input, 
      .shipping-box select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        outline: none;
      }
      .shipping-box input:focus, 
      .shipping-box select:focus {
        border-color: #007bff;
      }
      .order-btn {
        width: 100%;
        padding: 12px;
        margin-top: 15px;
        border: none;
        border-radius: 8px;
        background: #007bff;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
      }
      .order-btn:hover {
        background: #0056b3;
      }
    </style>
  </head>
